{
  "compilerOptions": {
    "rootDirs": ["./bin/", "./lib/"],
    "outDir": "./dist/",
    "module": "ES2022",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./lib/**/*", "./bin/**/*"],
  "exclude": ["./lib/static/*"]
}
